<div class="errormessage">
  <%= form_with model: @article, local: true do |form| %>
      <p>
        <strong><%= form.label :title %></strong><br>
        <%= form.text_field :title, class: "article_textfield" %>
      </p>

      <p>
        <strong><%= form.label :text %></strong><br>
        <%= form.text_area :text, class: "article_textarea"%>
      </p>

      <% if @article.errors.any? %>
          <% err = "Title cannot be blank or less than 5 characters." %>
          <p><%= err %></p>
      <% end %>

      <p>
        <%= form.submit "Submit Article", class: "btn btn-success"%>
      </p>
  <% end %>
</div>
