<link rel="stylesheet" type="text/text/css" href="/stylesheets/comments.scss">
<div class="comment">
  <h3>Comments</h3>
  <% @article.comments.each do |comment| %>
    <b><%= comment.commenter %>:</b>
    <%= comment.body %>
    <%= link_to 'Delete', [comment.article, comment], method: :delete %><br>
  <% end %>
</div>
